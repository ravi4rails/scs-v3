<p id="notice"><%= notice %></p>
<div class="well">
  <div class="row">
    <div class="col-md-5">
      <h3>Listing Events</h3>
    </div>
    <div class="col-md-5">
      <h3><%= link_to 'New Event', new_admins_event_path, :"data-toggle" => "modal" ,:"data-target" => "#new-event", :remote => true, class: "btn btn-primary pull-right" %></h3>
    </div>
  </div>
</div>
<div id="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Description</th>
        <th>Start date</th>
        <th>End date</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>
    <tbody id="event-index">
      <% @events.each do |event| %>
        <tr id="event_<%= event.id%>">
          <td><%= event.title %></td>
          <td><%= event.description %></td>
          <td><%= event.start_date %></td>
          <td><%= event.end_date %></td>
          <td><%= link_to 'Show', admins_event_path(event) %></td>
          <td><%= link_to 'Edit', edit_admins_event_path(event), :remote => true %></td>
          <td><%= link_to 'Destroy', admins_event_path(event), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
<br>

<div class="modal fade" id="new-event" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>
<div class="modal fade" id="edit-event" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
</div>